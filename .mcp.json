{
  "servers": {
    "filesystem": {
      "description": "Filesystem access for the project",
      "command": "npx",
      "args": [
        "@modelcontextprotocol/server-filesystem",
        "."
      ],
      "type": "stdio"
    },
    "shadcn": {
      "description": "Shadcn UI component manager",
      "command": "node",
      "args": [
        "mcp-server/index.js"
      ],
      "type": "stdio",
      "cwd": "."
    }
  },
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  }
}
